!!!
%html
  %head
    %meta{charset: "utf-8"}/
    %title Hello world
    %meta{content: "width=device-width", name: "viewport"}/
    %link{charset: "utf-8", href: "css/vendor/milligram.css", rel: "stylesheet"}/
    %link{charset: "utf-8", href: "css/vendor/milligram-nav.css", rel: "stylesheet"}/
    %link{charset: "utf-8", href: "css/style.css", rel: "stylesheet"}/

  %body
    .container
      %main-nav
      .content
        %route
      %ab-footer

    :ruby
      dependencies = %w(
        riot-router
        zepto
        underscore
        underscore.string
      )

      components = %w(
        main_nav
        example_cont
        form_cont
        ab_table
        table_users
        table_companies
        table_unis
        sample
        ab_footer
        profile
        user
        not_found
      )

    %script{src: "bower_components/riot/riot.js"}
    - dependencies.map do |name|
      %script{src: "js/vendor/#{name}.js"}
    %script{src: "js/store.js"}
    - components.map do |name|
      %script{src: "comp/#{name}.js"}
    %script{src: "js/bapp-api/model.js"}
    %script{src: "js/bapp-api/models.js"}
    %script{src: "js/bapp-api/bapi.js"}
    %script{src: "js/main.js"}

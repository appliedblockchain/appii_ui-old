%user-edit
  .right
    %a.button{ href: "/#/users/{ user.id }" } View Profile
  %h4 Edit your profile:
  %h2 { user.name }
  %form#user_form{ onsubmit: "{ update }" }
    -# %h4
    -#   %input.big-text{placeholder: "Your current Job Title", name: "jobTitle", type: "text", value: "{ user.jobTitle }"}/
    .row
      .column.overlay_cont
        %label.normal
          %img.avatar{ src: "{ user.avatarLg }" }
          .icon.overlay.white ðŸ“·
          %input{ type: "file" }
      .column.column-80
        -# %p.border{ disabled: true }
